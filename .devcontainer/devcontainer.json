{
	"name": "pymock Dev Container",
	"build": {
		"dockerfile": "Dockerfile",
		"context": ".."
	},
	"customizations": {
		"vscode": {
			"settings": {
				// Python settings
				"python.analysis.autoImportCompletions": true,
				"python.defaultInterpreterPath": "/usr/local/bin/python",
				"python.linting.enabled": true,
				"python.linting.lintOnSave": true,
				"python.linting.pylintEnabled": true,
				"python.linting.flake8Enabled": false,
				"python.linting.mypyEnabled": false,
				"python.analysis.fixAll": ["source.unusedImports"],

				"cSpell.words": [
					"pycache",
					"venv",
					"mypy",
					"claver",
					"pymock"
				],

				// Format on save
				"editor.formatOnSave": true,
				"editor.defaultFormatter": "charliermarsh.ruff",

				// Exclude temporary or generated files
				"files.exclude": {
					"**/__pycache__": true,
					"**/.cache": true,
					"**/.coverage": true,
					"**/.coverage.*": true,
					"**/.hypothesis": true,
					"**/.mypy_cache": true,
					"**/.nox": true,
					"**/.pytest_cache": true,
					"**/.ruff_cache": true,
					"**/.tox": true
				},

				// Editor font settings
				"editor.fontFamily": "JetBrainsMono Nerd Font Propo",
				"editor.fontLigatures": true,
				"editor.fontSize": 14,

				// Integrated terminal font settings
				"terminal.integrated.fontFamily": "JetBrainsMono Nerd Font Propo"
			},
			"extensions": [
				"ms-python.python",             // Core Python support
				"ms-python.vscode-pylance",       // Enhanced Python language server
				"ms-toolsai.jupyter",             // Notebook support
				"charliermarsh.ruff",             // Ruff linting/formatting
				"editorconfig.editorconfig",      // EditorConfig support
				"ms-azuretools.vscode-docker",    // Docker support
				"streetsidesoftware.code-spell-checker", // Spell checking
				"bungcip.better-toml",            // TOML file support
				"redhat.vscode-yaml",             // YAML file support
				"ms-vscode.makefile-tools",       // Makefile support
				"esbenp.prettier-vscode"          // JSON (and general) formatting
			]
		}
	},
	"postCreateCommand": "pip install --upgrade pip && pip install hatch hatchling hatch-vcs && hatch env create",
	"portsAttributes": {
		"9000": {
			"label": "Application Port",
			"onAutoForward": "notify"
		}
	}
}
